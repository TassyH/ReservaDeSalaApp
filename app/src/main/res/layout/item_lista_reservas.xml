            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/item_data_reserva_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:hint="Data: "
                    android:padding="5dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/corBack"
                    android:textColorHint="@android:color/black"
                    app:layout_constraintTop_toBottomOf="@id/item_nome_sala"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/item_data_reserva"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:hint="Dataaa "
                    android:padding="5dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/corBack"
                    android:textColorHint="@android:color/black"
                    app:layout_constraintTop_toBottomOf="@id/item_nome_sala"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/item_datahora_inicial_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:hint="Inicio: "
                    android:padding="5dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/corBack"
                    android:textColorHint="@android:color/black"
                    app:layout_constraintTop_toBottomOf="@id/item_data_reserva"
                    tools:ignore="MissingConstraints">

                </TextView>

                <TextView
                    android:id="@+id/item_datahora_inicial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:hint="Inicio hora "
                    android:padding="5dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/corBack"
                    android:textColorHint="@android:color/black"
                    app:layout_constraintTop_toBottomOf="@id/item_data_reserva"
                    tools:ignore="MissingConstraints">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">


                <TextView
                    android:id="@+id/item_datahora_final_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:hint="Fim: "
                    android:padding="5dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/corBack"
                    android:textColorHint="@android:color/black"
                    app:layout_constraintTop_toBottomOf="@+id/item_datahora_inicial"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="0dp">

                </TextView>

                <TextView
                    android:id="@+id/item_datahora_final"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:hint="Fimm "
                    android:padding="5dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/corBack"
                    android:textColorHint="@android:color/black"
                    app:layout_constraintTop_toBottomOf="@+id/item_datahora_inicial"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="0dp">

                </TextView>

            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/item_descricao_reserva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_datahora_final"
                android:padding="5dp"
                android:text="reuniao sobre os trainees de pa"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@id/item_datahora_final"
                tools:ignore="MissingConstraints" />
        </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>